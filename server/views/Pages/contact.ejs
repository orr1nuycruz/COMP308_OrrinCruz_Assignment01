<main class="container">
      <!-- Main Content -->
      <div class="jumbotron">
        <h1 class="display-4">Contact Me</h1>

        <p class="lead">
        Send me a message. I would like to hear your thoughts about me.
        </p>
        <p>
        Email: ocruz2@my.centennialcollege.ca
        </p>
        <hr class="my-4" />

      <div class="container">
        <div class="row">
          <div class="col-sm">
            <form  class="form" method="POST">

                <div class="form-group">
                    <label for="MessageTextField">First Name</label>
                    <input type="text" class="form-control" 
                    id="FirstName" 
                    placeholder="Mark"
                    name="firstName"
                    required>
                </div>

                <div class="form-group">
                    <label for="MessageTextField">Last Name</label>
                    <input type="text" class="form-control" 
                    id="LastName" 
                    placeholder="Ruffalo"
                    name="lastName"
                    required>
                </div>

                <div class="form-group">
                    <label for="MessageTextField">E-mail</label>
                    <input type="text" class="form-control" 
                    id="Email" 
                    placeholder="your@example.com"
                    name="email"
                    required>
                </div>

                <div class="form-group">
                    <label for="MessageTextField">Message</label>
                    <input type="text" class="form-control" 
                    id="SendMessage" 
                    placeholder="Hello Mark"
                    name="sendMessage"
                    required>
                </div>

                <button type="submit" class="btn btn-primary">
                <i class="fa fa-pencil-square" aria-hidden="true"></i>
                Submit</button>
                <a href="/" class="btn btn-warning">
                    <i class="fa fa-undo" aria-hidden="true"></i> Cancel</a>
            </form>
          </div>

          <div class="col-sm">
          </div>
        </div>
      </div>
       
      </div>
</main>